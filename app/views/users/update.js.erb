document.body.addEventListener('ajax:success', function(event) {
  <% if @state.errors.any? %>
    <% @state.errors.full_messages.each do |msg| %>
      $('#state-error').append('<li><%= msg %></li>')
    <% end %>
  <% end %>

  $("#update-message").html('<p class="alert alert-success alert-dismissible fade show">ステータスの更新完了！<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></p>');

  <%# ステータス値の更新 %>
  $('#max').val("");
  $('#lv').text('<%= @state.lv %>');
  $('#point').text('<%= @state.point %>');
  $('#strVal').text('<%= @state.str %>');
  $('#vitVal').text('<%= @state.vit %>');
  $('#dexVal').text('<%= @state.dex %>');
  $('#intVal').text('<%= @state.int %>');
  $('#speVal').text('<%= @state.spe %>');
  $('.action').val("");
  $(".status-bar").html("<%= escape_javascript(render 'shared/progress_bar', state: @state)%>");

  
  <%# 星の更新 %>
  $('#str').raty('set', {
    score: <%= @state.str %> % 3,
  });
  $('#vit').raty('set', {
    score: <%= @state.vit %> % 3,
  });
  $('#dex').raty('set', {
    score: <%= @state.dex %> % 3,
  });
  $('#int').raty('set', {
    score: <%= @state.int %> % 3,
  });
  $('#spe').raty('set', {
    score: <%= @state.spe %> % 3,
  });
  
})