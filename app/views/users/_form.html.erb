<%= form_with model: @state, url: state_path do |f| %>
  <%= hidden_field_tag :id, @state.user_id %>
  <%= hidden_field_tag :full_attr %>
  
  <ul class="status">
    <li>
      <span class="badge badge-info text-monospace">ちから <em id="strVal" class="badge badge-light"><%= @state.str %></em>
        <span class=" form-group star" id="str"></span>
      </span>
      <button type="button" class="btn btn-outline-success rounded-circle py-1 plus" data-toggle="popover">+</button>
    </li>
    <li>
      <span class="badge badge-info text-monospace">たいりょく <em id="vitVal" class="badge badge-light"><%= @state.vit %></em>
        <span class=" form-group star" id="vit"></span>
      </span>
      <button type="button" class="btn btn-outline-success rounded-circle py-1 plus" data-toggle="popover">+</button>
    </li>
    <li>
      <span class="badge badge-info text-monospace">きよう <em id="dexVal" class="badge badge-light"><%= @state.dex %></em>
        <span class=" form-group star" id="dex"></span>
      </span>
      <button type="button" class="btn btn-outline-success rounded-circle py-1 plus" data-toggle="popover">+</button>
    </li>
    <li>
      <span class="badge badge-info text-monospace">かしこさ <em id="intVal" class="badge badge-light"><%= @state.int %></em>
        <span class="form-group star" id="int"></span>
      </span>
      <button type="button" class="btn btn-outline-success rounded-circle py-1 plus" data-toggle="popover">+</button>
    </li>
    <li>
      <span class="badge badge-info text-monospace">とくしゅ <em id="speVal" class="badge badge-light"><%= @state.spe %></em>
        <span class="form-group star" id="spe"></span>
      </span>
      <button type="button" class="btn btn-outline-success rounded-circle py-1 plus" data-toggle="popover">+</button>
    </li>
  </ul>

  <div class="card text-center">
    <div class="card-body">
      <%= f.label :action, "本日の行動を、ここに入力", class: " card-title" %>
      <%= f.text_field :action, class: 'form-control action  card-text', required: true %>
      <%= f.submit "記録する", class: "btn btn-primary btn-block card-text" %>
    </div>
  </div>
<% end %>