<h1 class="text-center">新規登録</h1>

<%= form_with model: @user, url: regist_path, local: true, class: "form-group" do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name, "名前", class: "form-check-label" %>
  <%= f.text_field :name, :class => 'form-control' %>

  <%= f.label :email, "メールアドレス", class: "form-check-label" %>
  <%= f.email_field :email, :class => 'form-control' %>

  <%= f.label :password, "パスワード", class: "form-check-label" %>
  <%= f.password_field :password, :class => 'form-control' %>

  <%= f.label :password_confirmation, "パスワード（確認）", class: "form-check-label" %>
  <%= f.password_field :password_confirmation, :class => 'form-control' %>

  <%= f.submit "この内容で登録する", :class => 'btn btn-primary' %>
<% end %>