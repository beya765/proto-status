<h1 class="text-center">ログイン</h1>

<%= form_with url: login_path, local: true, class: "form-group" do |f| %>
  <%#= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.label :email, "メールアドレス", class: "form-check-label" %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password, "パスワード", class: "form-check-label" %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.submit "ログインする", class: 'btn btn-primary btn-block mt-4' %>
<% end %>